{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "debug server-side",
        "type": "node-terminal",
        "request": "launch",
        "command": "yarn dev"
      },
      {
        "name": "debug client-side",
        "type": "pwa-chrome",
        "request": "launch",
        "url": "http://localhost:3000"
      },
      {
        "name": "debug full stack",
        "type": "node-terminal",
        "request": "launch",
        "command": "yarn dev",
        "console": "integratedTerminal",
        "serverReadyAction": {
          "pattern": "started server on .+, url: (https?://.+)",
          "uriFormat": "%s",
          "action": "debugWithChrome"
        }
      }
    ]
  }